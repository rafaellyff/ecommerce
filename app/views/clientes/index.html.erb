<p id="notice"><%= notice %></p>

<h1>Clientes</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Login</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clientes.each do |cliente| %>
        <tr>
          <td><%= cliente.nome %></td>
          <td><%= cliente.email %></td>
        
          <td><%= link_to '<i class="fa fa-search"></i> Ver'.html_safe, ver_clientes_path(email: cliente.email) , class: "btn btn-default"%></td>
          <td><%= link_to '<i class="fa fa-edit"></i> Editar'.html_safe, editar_clientes_path(email: cliente.email), class: "btn btn-default" %></td>
          <td><%= link_to '<i class="fa fa-trash"></i> Deletar'.html_safe, excluir_clientes_path(email: cliente.email) , method: :delete, data: { confirm: 'Você tem certeza que deseja realizar essa operação?' } , class: "btn btn-default"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<%= link_to '<i class="fa fa-plus"></i> Novo'.html_safe, new_cliente_path, class: "btn btn-default" %>
