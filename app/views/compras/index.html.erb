<p id="notice"><%= notice %></p>

<h1>Compras</h1>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Cliente</th>
        <th>Data</th>
        <th>Valor Total</th>
        <th>Forma pagamento</th>
        <th>Contato</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @compras.each do |compra| %>
        <tr>
          <td><%= Usuario.find(compra.usuario).nome %></td>
            <td><%= compra.data.strftime("%d/%m/%Y") %></td>
          <td>R$ <%= compra.valor_total.blank? ? "0.0" : number_with_precision(compra.valor_total.blank? ? "0.0" : compra.valor_total, :precision => 2, separator: ",", :delimiter => '.')%></td>
          <td><%= compra.forma_pagamento %></td>
          <td><%= compra.contato%></td>
          <td><%= compra.status %></td>
          <td><%= link_to '<i class="fa fa-search"></i> Ver'.html_safe, compra , class: "btn btn-default"%></td>
          <td><%= link_to '<i class="fa fa-edit"></i> Editar'.html_safe, edit_compra_path(compra), class: "btn btn-default" %></td>
          <td><%= link_to '<i class="fa fa-trash"></i> Deletar'.html_safe, compra, method: :delete, data: { confirm: 'Você tem certeza que deseja realizar essa operação?' } , class: "btn btn-default"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to '<i class="fa fa-plus"></i> Novo'.html_safe, new_compra_path, class: "btn btn-default" %>
